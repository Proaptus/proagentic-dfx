#!/usr/bin/env sh
# =============================================================================
# COMPREHENSIVE QUALITY GATE - Pre-Commit Hook
# =============================================================================
# This hook enforces code quality standards BEFORE any commit can proceed.
# All gates must pass or the commit is rejected.
#
# Quality Gates (in order):
#   1. File Size Check - Blocks oversized files (AI context optimization)
#   2. Hardcoded URL Check - Blocks localhost URLs in production code
#   3. Lint-Staged - ESLint fix + Prettier formatting
#   4. TypeScript Check - Type safety verification
#   5. Unit Tests - All tests must pass
#   6. Coverage Check - Must meet 80% threshold
# =============================================================================

echo ""
echo "========================================"
echo "  QUALITY GATE: Pre-Commit Validation"
echo "========================================"
echo ""

# Track start time
START_TIME=$(date +%s)

# -----------------------------------------------------------------------------
# GATE 1: File Size Check (Fast - runs first)
# -----------------------------------------------------------------------------
echo "[1/6] Checking file sizes..."
node scripts/check-file-sizes.mjs staged
if [ $? -ne 0 ]; then
  echo ""
  echo "GATE 1 FAILED: File size limits exceeded"
  echo "Split large files before committing. See CLAUDE.md for guidelines."
  exit 1
fi
echo "  File sizes OK"

# -----------------------------------------------------------------------------
# GATE 2: Hardcoded URL Check (Fast - catches production bugs early)
# -----------------------------------------------------------------------------
echo "[2/6] Checking for hardcoded URLs..."
node scripts/check-hardcoded-urls.mjs staged
if [ $? -ne 0 ]; then
  echo ""
  echo "GATE 2 FAILED: Hardcoded localhost URLs detected"
  echo "Use relative paths (/api) instead of hardcoded localhost URLs."
  exit 1
fi
echo "  Hardcoded URLs OK"

# -----------------------------------------------------------------------------
# GATE 3: Lint-Staged (ESLint + Prettier)
# -----------------------------------------------------------------------------
echo "[3/6] Running lint-staged (ESLint + Prettier)..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo ""
  echo "GATE 3 FAILED: Linting/formatting errors"
  echo "Fix ESLint errors before committing."
  exit 1
fi
echo "  Lint OK"

# -----------------------------------------------------------------------------
# GATE 4: TypeScript Type Check
# -----------------------------------------------------------------------------
echo "[4/6] Running TypeScript type check..."
cd proagentic-dfx && npx tsc --noEmit 2>&1
TSC_EXIT=$?
cd ..
if [ $TSC_EXIT -ne 0 ]; then
  echo ""
  echo "GATE 4 FAILED: TypeScript type errors"
  echo "Fix type errors before committing."
  exit 1
fi
echo "  TypeScript OK"

# -----------------------------------------------------------------------------
# GATE 5: Unit Tests (Must Pass)
# -----------------------------------------------------------------------------
echo "[5/6] Running unit tests..."
cd proagentic-dfx && npm run test -- --run --reporter=dot 2>&1
TEST_EXIT=$?
cd ..
if [ $TEST_EXIT -ne 0 ]; then
  echo ""
  echo "GATE 5 FAILED: Unit tests failing"
  echo "All tests must pass before committing."
  exit 1
fi
echo "  Tests OK"

# -----------------------------------------------------------------------------
# GATE 6: Coverage Threshold Check (80% minimum)
# -----------------------------------------------------------------------------
echo "[6/6] Verifying coverage thresholds (80% minimum)..."
cd proagentic-dfx && npm run test:coverage -- --run --reporter=dot 2>&1
COVERAGE_EXIT=$?
cd ..
if [ $COVERAGE_EXIT -ne 0 ]; then
  echo ""
  echo "GATE 6 FAILED: Coverage below 80% threshold"
  echo "Add tests to increase coverage before committing."
  echo ""
  echo "Run 'npm run test:coverage' to see detailed coverage report."
  exit 1
fi
echo "  Coverage OK"

# -----------------------------------------------------------------------------
# SUCCESS: All Gates Passed
# -----------------------------------------------------------------------------
END_TIME=$(date +%s)
DURATION=$((END_TIME - START_TIME))

echo ""
echo "========================================"
echo "  ALL QUALITY GATES PASSED"
echo "  Duration: ${DURATION}s"
echo "========================================"
echo ""
echo "Proceeding with commit..."
