{
  "name": "proagentic-dfx-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "ProAgentic DFX - AI-powered engineering design platform (monorepo)",
  "workspaces": [
    "packages/*",
    "proagentic-dfx",
    "h2-tank-mock-server"
  ],
  "scripts": {
    "kill-ports": "npx kill-port 3000 3001 || exit 0",
    "predev": "npm run kill-ports",
    "dev": "turbo run dev --filter=proagentic-dfx",
    "predev:mock": "npm run kill-ports",
    "dev:mock": "turbo run dev --filter=h2-tank-mock-server",
    "predev:all": "npm run kill-ports",
    "dev:all": "turbo run dev --parallel",
    "start": "scripts\\start-dev.bat",
    "start:test": "node scripts/integration-test.mjs",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage --filter=proagentic-dfx",
    "test:e2e": "turbo run test:e2e --filter=proagentic-dfx",
    "validate": "turbo run lint typecheck test",
    "validate:full": "npm run check:sizes && npm run lint && npm run typecheck && npm run test:coverage",
    "quality-gate": "npm run check:sizes && npm run lint && npm run typecheck && npm run test:coverage && npm run build",
    "check:sizes": "node scripts/check-file-sizes.mjs all",
    "check:sizes:staged": "node scripts/check-file-sizes.mjs staged",
    "prepare": "husky",
    "gen:domain": "turbo gen workspace --type domain",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "husky": "^9.1.7",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3"
  },
  "lint-staged": {
    "proagentic-dfx/**/*.{ts,tsx,js,jsx}": [
      "eslint --config proagentic-dfx/eslint.config.mjs --fix"
    ],
    "h2-tank-mock-server/**/*.{ts,tsx,js,jsx}": [
      "eslint --config h2-tank-mock-server/eslint.config.mjs --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "npm@11.6.2"
}
