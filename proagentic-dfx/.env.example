# ProAgentic DFX - Environment Variables
# Copy this file to .env.local for local development

# ===========================================
# API Configuration
# ===========================================
# Development: points to mock server
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Production: use relative URL for same-origin API
# NEXT_PUBLIC_API_URL=/api

# ===========================================
# Feature Flags
# ===========================================
NEXT_PUBLIC_ENABLE_3D_VIEWER=true
NEXT_PUBLIC_ENABLE_STRESS_ANALYSIS=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_PARETO_OPTIMIZATION=true

# ===========================================
# Application Settings
# ===========================================
NEXT_PUBLIC_APP_NAME=ProAgentic DFX
NEXT_PUBLIC_APP_VERSION=0.1.0

# ===========================================
# Analytics & Monitoring (optional)
# ===========================================
# NEXT_PUBLIC_ANALYTICS_ID=
# SENTRY_DSN=

# ===========================================
# Build Settings
# ===========================================
NEXT_TELEMETRY_DISABLED=1
